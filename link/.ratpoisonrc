################################################################################
# Command-related settings
################################################################################

# aliasing keys within ratpoison
alias reload exec ratpoison -c "source ~/.ratpoisonrc"

# make semicolon invoke ratpoison command, and colon shell command.
bind semicolon colon
bind colon exec

# Close current window
bind q kill

# Kill focused application
bind Q kill

# Reload configuration file
bind e exec ratpoison -c "source ~/.ratpoisonrc"

################################################################################
# Application-related settings
################################################################################

# alias 'term' urxvt
alias term exec urxvt

# Bind keys to applications

# Change the date from 24-hour to 12-hour
bind a time

# Web browsers
bind b exec dwb
bind S-b elinks http://www.google.com/

# Terminals
bind enter exec urxvt -tr
bind c exec urxvt -tr

# Dmenu
bind d exec dmenu_run

# Open link in dwb
bind f exec dwb `$RATPOISON -c getsel`

# Open i3wm temporarily
bind i tmpwm i3

# Open Thunderbird email client
bind t thunderbird

# Runs a perl script which emulates the Mac's expose feature.
bind w exec ~/bin/expose

# Runs a shell script which creates an alt-tab menu analog
#bind W exec ~/bin/windows

# Zathura pdf viewer
bind z exec zathura


