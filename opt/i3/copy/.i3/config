# run script to solve dbus registration problem with gnome-session apps
exec --no-startup-id /usr/bin/i3-gnome

# set monitor resolution correctly if .xinitrc doesn't
# stdmon

# set workspace names and variables
set $wsp1 1: www
set $wsp2 2: mail
set $wsp3 3: term
set $wsp4 4
set $wsp5 5
set $wsp6 6
set $wsp7 7
set $wsp8 8
set $wsp9 9
set $wsp10 10: read

# set workspaces to particular monitors
workspace "$wsp1" output DVI-D-1
workspace "$wsp2" output DVI-D-1
workspace "$wsp3" output DVI-D-1
workspace "$wsp4" output DVI-D-1
